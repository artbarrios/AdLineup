    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(modelBillboard => Model.Billboards.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelBillboard => Model.Billboards.FirstOrDefault().Location)
            </th>
            <th>
                @Html.DisplayNameFor(modelBillboard => Model.Billboards.FirstOrDefault().Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(modelBillboard => Model.Billboards.FirstOrDefault().Longitude)
            </th>
        <th></th>
        </tr>
@foreach (var billboard in Model.Billboards)    {
        <tr>
            <td>
                @Html.DisplayFor(modelBillboard => billboard.Name)
            </td>
            <td>
                @Html.DisplayFor(modelBillboard => billboard.Location)
            </td>
            <td>
                @Html.DisplayFor(modelBillboard => billboard.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelBillboard => billboard.Longitude)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Billboards", new { id = billboard.Id }, null)
 |
                @Html.ActionLink("Remove from List", "RemoveBillboardFromAd", "Ads", new { adId = Model.Id, billboardId = billboard.Id }, null )
            </td>
        </tr>
}
    </table>    
</div>

