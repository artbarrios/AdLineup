@model AdLineup.Models.AdBillboardViewModel

@{
    ViewBag.Title = "AddAdToBillboard";
}

<h2>Billboard: @Html.DisplayFor(model => model.Billboard_Name)</h2>
<h4>Add Ad To Billboard</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.BillboardId)
        @Html.HiddenFor(model => model.Billboard_Name)

        @if (((SelectList)ViewBag.AdId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Ad_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("AdId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Ads have been added to this Billboard.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to Billboard Detail", "Details", new { id = Model.BillboardId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}